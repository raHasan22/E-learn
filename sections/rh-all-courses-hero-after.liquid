{% style %}
.rh-all-course-hero-after {
  padding: {{ section.settings.padding_top | default: 0 }}px {{ section.settings.padding_horizontal | default: 20 }}px {{ section.settings.padding_bottom | default: 0 }}px;
  background: {{ section.settings.background_color | default: 'transparent' }};
}

.rh-all-course-hero-after .container_rh {
  max-width: {{ section.settings.max_width | default: 970 }}px;
  margin: 0 auto;
}

.rh-all-course-hero-after .hero-after-card {
  position: relative;
  background: {{ section.settings.card_background_color | default: 'white' }};
  box-shadow: {{ section.settings.card_shadow | default: '0px 4px 20px rgba(0, 0, 0, 0.10)' }};
  border-radius: {{ section.settings.card_border_radius | default: 8 }}px;
  padding: {{ section.settings.card_padding | default: 40 }}px;
  margin-top: {{ section.settings.negative_margin_top | default: -170 }}px;
}

.rh-all-course-hero-after .hero-after-content {
  display: flex;
  flex-direction: column;
  gap: {{ section.settings.content_gap | default: 34 }}px;
  align-items: flex-start;
}

.rh-all-course-hero-after .hero-after-text {
  display: flex;
  flex-direction: column;
  gap: {{ section.settings.text_gap | default: 24 }}px;
  width: 100%;
}

.rh-all-course-hero-after .hero-after-description {
  color: {{ section.settings.description_color | default: '#272727' }};
  font-size: {{ section.settings.description_font_size | default: 18 }}px;
  font-family: "Inter", sans-serif;
  font-weight: {{ section.settings.description_font_weight | default: 400 }};
  line-height: {{ section.settings.description_line_height | default: 28.8 }}px;
  word-wrap: break-word;
}

.rh-all-course-hero-after .hero-after-highlight {
  color: {{ section.settings.highlight_color | default: '#05CE78' }};
  font-size: {{ section.settings.highlight_font_size | default: 18 }}px;
  font-family: "Inter", sans-serif;
  font-weight: {{ section.settings.highlight_font_weight | default: 500 }};
  line-height: {{ section.settings.highlight_line_height | default: 28.8 }}px;
  word-wrap: break-word;
}

.rh-all-course-hero-after .hero-after-button {
  display: inline-flex;
  padding: {{ section.settings.button_padding_vertical | default: 20 }}px {{ section.settings.button_padding_horizontal | default: 40 }}px;
  background: {{ section.settings.button_color | default: '#05CE78' }};
  border-radius: {{ section.settings.button_border_radius | default: 6 }}px;
  text-decoration: none;
  transition: background-color 0.3s ease;
  min-width: {{ section.settings.button_min_width | default: 220 }}px;
  justify-content: center;
  align-items: center;
}

.rh-all-course-hero-after .hero-after-button:hover {
  background: {{ section.settings.button_hover_color | default: '#04b368' }};
}

.rh-all-course-hero-after .hero-after-button-text {
  color: {{ section.settings.button_text_color | default: 'white' }};
  font-size: {{ section.settings.button_font_size | default: 18 }}px;
  font-family: "Inter", sans-serif;
  font-weight: {{ section.settings.button_font_weight | default: 600 }};
  line-height: {{ section.settings.button_line_height | default: 23.4 }}px;
  word-wrap: break-word;
}

/* Responsive styles for hero after section */
@media screen and (max-width: 1024px) {
  .rh-all-course-hero-after .container_rh {
    max-width: 90%;
  }
  
  .rh-all-course-hero-after .hero-after-card {
    margin-top: {{ section.settings.negative_margin_top_tablet | default: -120 }}px;
  }
}

@media screen and (max-width: 768px) {
  .rh-all-course-hero-after {
    padding: 20px 15px;
  }
  
  .rh-all-course-hero-after .container_rh {
    max-width: 100%;
  }
  
  .rh-all-course-hero-after .hero-after-card {
    padding: 30px 20px;
    margin-top: {{ section.settings.negative_margin_top_mobile | default: -120 }}px;
  }
  
  .rh-all-course-hero-after .hero-after-content {
    gap: 24px;
  }
  
  .rh-all-course-hero-after .hero-after-text {
    gap: 20px;
  }
  
  .rh-all-course-hero-after .hero-after-description,
  .rh-all-course-hero-after .hero-after-highlight {
    font-size: 16px;
    line-height: 24px;
  }
  
  .rh-all-course-hero-after .hero-after-button {
    padding: 16px 32px;
    min-width: 200px;
  }
  
  .rh-all-course-hero-after .hero-after-button-text {
    font-size: 16px;
    line-height: 20px;
  }
}

@media screen and (max-width: 480px) {
  .rh-all-course-hero-after {
    padding: 15px 10px;
  }
  
  .rh-all-course-hero-after .hero-after-card {
    padding: 24px 16px;
    margin-top: {{ section.settings.negative_margin_top_small_mobile | default: -110 }}px;
  }
  
  .rh-all-course-hero-after .hero-after-content {
    gap: 20px;
  }
  
  .rh-all-course-hero-after .hero-after-text {
    gap: 16px;
  }
  
  .rh-all-course-hero-after .hero-after-description,
  .rh-all-course-hero-after .hero-after-highlight {
    font-size: 14px;
    line-height: 22px;
  }
  
  .rh-all-course-hero-after .hero-after-button {
    padding: 14px 28px;
    min-width: 180px;
    width: 100%;
  }
  
  .rh-all-course-hero-after .hero-after-button-text {
    font-size: 14px;
    line-height: 18px;
  }
}

@media screen and (max-width: 375px) {
  .rh-all-course-hero-after {
    padding: 10px 5px;
  }
  
  .rh-all-course-hero-after .hero-after-card {
    padding: 20px 12px;
    margin-top: {{ section.settings.negative_margin_top_xsmall_mobile | default: -102 }}px;
  }
  
  .rh-all-course-hero-after .hero-after-content {
    gap: 16px;
  }
  
  .rh-all-course-hero-after .hero-after-text {
    gap: 12px;
  }
  
  .rh-all-course-hero-after .hero-after-description,
  .rh-all-course-hero-after .hero-after-highlight {
    font-size: 13px;
    line-height: 20px;
  }
  
  .rh-all-course-hero-after .hero-after-button {
    padding: 12px 24px;
    min-width: 160px;
  }
  
  .rh-all-course-hero-after .hero-after-button-text {
    font-size: 13px;
    line-height: 16px;
  }
}

{% endstyle %}







