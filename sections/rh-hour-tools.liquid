<div class="rh-our-tools-section">
  <div class="container_rh">
    <div class="rh-our-tools-header">
      <h2 class="rh-header-title">{{ section.settings.header_title | default: 'You got your goal, we got the tools' }}</h2>
      <p class="rh-header-desc">{{ section.settings.header_description | default: 'Giving you the best learning experience possible' }}</p>
    </div>
    <div class="rh-our-tools-content">
      <div class="content-left">
        <div class="content-left-item-big">
          <div class="text-part">
                         <div class="rh-icon">
               {% if section.settings.big_item_icon %}
                 <img src="{{ section.settings.big_item_icon | image_url: width: 60, height: 60 }}" alt="{{ section.settings.big_item_title }}" />
               {% else %}
                 <img src="https://dummyimage.com/60x60/0b5431/ffffff&text=Icon" alt="icon" />
               {% endif %}
             </div>
            <div class="rh-text">
              <h3 class="rh-title">{{ section.settings.big_item_title | default: 'Interactive, not reactive' }}</h3>
              <p class="rh-desc">{{ section.settings.big_item_description | default: 'Our courses come with plenty of practical examples, assignments, quizzes & demos.' }}</p>
            </div>
          </div>
                     <div class="video-part">
                         {% assign video_url = section.settings.video_url | default: 'https://sample-videos.com/zip/10/mp4/SampleVideo_1280x720_1mb.mp4' %}
                         {% if video_url != blank %}
                           <video
                             class="simple-video"
                             controls
                             preload="metadata"
                             style="width: 100%; height: 100%; object-fit: cover; border-radius: {{ section.settings.video_border_radius }}px;"
                           >
                             <source src="{{ video_url }}" type="video/mp4">
                             Your browser does not support the video tag.
                           </video>
                         {% else %}
                           <img src="https://dummyimage.com/600x400/cccccc/666666&text=Video+Placeholder" alt="Video Placeholder" style="width: 100%; height: 100%; object-fit: cover; border-radius: {{ section.settings.video_border_radius }}px;" />
                         {% endif %}
          </div>
        </div>
        
        {% for block in section.blocks %}
          {% if block.type == 'small_item' %}
            <div class="content-left-item-small">
                             <div class="rh-icon">
                 {% if block.settings.icon %}
                   <img src="{{ block.settings.icon | image_url: width: 60, height: 60 }}" alt="{{ block.settings.title }}" />
                 {% else %}
                   <img src="https://dummyimage.com/60x60/0b5431/ffffff&text=Icon" alt="icon" />
                 {% endif %}
               </div>
              <div class="rh-text">
                <h3 class="rh-title">{{ block.settings.title | default: 'Prove your progress' }}</h3>
                <p class="rh-desc">{{ block.settings.description | default: 'All our courses come with certificates of completion.' }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      
      <div class="content-right">
        <div class="content-right-item">
                     <div class="rh-icon">
             {% if section.settings.right_item_icon %}
               <img src="{{ section.settings.right_item_icon | image_url: width: 60, height: 60 }}" alt="{{ section.settings.right_item_title }}" />
             {% else %}
               <img src="https://dummyimage.com/60x60/0b5431/ffffff&text=Icon" alt="icon" />
             {% endif %}
           </div>
          <div class="rh-text">
            <h3 class="rh-title">{{ section.settings.right_item_title | default: 'All-Access Subscription' }}</h3>
            <p class="rh-desc">{{ section.settings.right_item_description | default: 'Get full access to all our current and future courses, as long as you have an active subscription.' }}</p>
          </div>
        </div>
                 <div class="content-right-image">
           {% if section.settings.right_image %}
             <img src="{{ section.settings.right_image | image_url: width: 400, height: 300 }}" alt="{{ section.settings.right_item_title }}">
           {% else %}
             <img src="https://dummyimage.com/400x300/cccccc/666666&text=Content+Image" alt="Content Right">
           {% endif %}
         </div>
      </div>
    </div>
  </div>
</div>



