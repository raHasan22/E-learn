{% style %}
    .rh-our-tools-section {
  background-color: {{ section.settings.background_color }};
  padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
}
.rh-our-tools-section .container_rh {
  max-width: 1300px;
  margin: 0 auto;
}
.rh-our-tools-section .rh-our-tools-header {
  margin: 0 0 48px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16px;
}
.rh-our-tools-section .rh-our-tools-header .rh-header-title {
  color: {{ section.settings.header_title_color }};
  font-size: 50px;
  font-family: "Inter", sans-serif;
  font-weight: 700;
  line-height: 120%;
  margin: 0;
}
.rh-our-tools-section .rh-our-tools-header .rh-header-desc {
  color: {{ section.settings.header_description_color }};
  font-size: 20px;
  font-family: "Inter", sans-serif;
  font-weight: 500;
  line-height: 140%;
  margin: 0;
}
.rh-our-tools-section .rh-our-tools-content {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  gap: 30px;
}
.rh-our-tools-section .rh-our-tools-content .content-left {
  width: 65%;
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  flex-wrap: wrap;
  gap: 30px;
}
.rh-our-tools-section .rh-our-tools-content .content-left .content-left-item-big {
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  padding: 30px;
  gap: 30px;
