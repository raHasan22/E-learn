<div class="rh-homepage-hero-section">
  <div class="container_rh">
    <div class="rh-homepage-hero-section-content">
      <div class="rh_flex-container">
        <div class="rh_left-text">
          <h2 class="sec-title">{{ section.settings.hero_title }}</h2>
          <p class="sec-desc">
            {{ section.settings.hero_description }}
          </p>
          <a href="{{ section.settings.button_link }}" class="rh-sec-button">{{ section.settings.button_text }}</a>
        </div>
        <div class="rh_right-image">
          {% if section.settings.hero_image %}
            {{ section.settings.hero_image | image_url: width: 600 | image_tag: alt: section.settings.hero_image.alt, loading: 'lazy' }}
          {% else %}
            <img src="https://dummyimage.com/600x400/cccccc/ffffff&text=Hero+Image" alt="Hero placeholder" />
          {% endif %}
        </div>
      </div>
    </div>
    
    {% if section.blocks.size > 0 %}
    <div class="rh-hero-info-content">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'info_card' %}
            <div class="rh-hero-info-content-item" {{ block.shopify_attributes }}>
              <div class="icon-image">
                {% if block.settings.icon_image %}
                  {{ block.settings.icon_image | image_url: width: 36 | image_tag: alt: block.settings.icon_image.alt, loading: 'lazy' }}
                {% else %}
                  <img src="https://dummyimage.com/36x36/cccccc/ffffff&text=Icon" alt="Icon placeholder" />
                {% endif %}
              </div>
              <div class="info-text">
                <h3 class="info-title">{{ block.settings.title }}</h3>
                <p class="info-desc">
                  {{ block.settings.description }}
                </p>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    {% endif %}
  </div>
</div>

