{% style %}
    .rh-homepage-hero-section{
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
}
.rh-homepage-hero-section .container_rh{
    max-width: 1300px;
    margin: 0 auto;
}
.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content{
    {% if section.settings.hero_background_image %}
        background: url({{ section.settings.hero_background_image | image_url }}) no-repeat center center;
        background-size: cover;
    {% else %}
        background-color: #0C3024;
    {% endif %}
    border-radius: 14px;
    overflow: hidden;
}
.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content .rh_flex-container{
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1120px;
    margin: 0 auto;
    padding: {{ section.settings.hero_padding_top }}px {{ section.settings.hero_padding_horizontal }}px 0;
}
.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content .rh_left-text{
    width: 50%;
    padding-bottom: {{ section.settings.left_text_padding_bottom }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}
.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content .rh_left-text .sec-title{
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    font-size: {{ section.settings.title_font_size }}px;
    line-height: 120%;
    text-transform: capitalize;
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.title_margin_bottom }}px;
}
.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content .rh_left-text .sec-desc{
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    font-size: {{ section.settings.description_font_size }}px;
    line-height: 150%;
    color: {{ section.settings.description_color }};
    margin: 0 0 {{ section.settings.description_margin_bottom }}px;
}
.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content .rh_left-text .rh-sec-button{
    font-family: 'Inter', sans-serif;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    max-width: {{ section.settings.button_max_width }}px;
    width: 100%;
    text-align: center;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    text-decoration: none;
    font-weight: 600;
    font-size: {{ section.settings.button_font_size }}px;
    line-height: 130%;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content .rh_left-text .rh-sec-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.6), transparent);
    transition: left 0.5s ease;
}

.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content .rh_left-text .rh-sec-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    background: {{ section.settings.button_hover_background_color }};
    color: {{ section.settings.button_hover_text_color }};
}

.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content .rh_left-text .rh-sec-button:hover::before {
    left: 100%;
}

.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content .rh_left-text .rh-sec-button:active {
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
}
.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content .rh_right-image{
    width: 50%;
}
.rh-homepage-hero-section .container_rh .rh-homepage-hero-section-content .rh_right-image img{
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.rh-homepage-hero-section .container_rh .rh-hero-info-content{
    display: flex;
    align-items: stretch;
    justify-content: space-between;
    max-width: 1130px;
    margin: 0 auto;
    padding: {{ section.settings.info_cards_padding_vertical }}px {{ section.settings.info_cards_padding_horizontal }}px;
    box-shadow: 0px 4px 20px 0px #0000001A;
    border-radius: {{ section.settings.info_cards_border_radius }}px;
    overflow: hidden;
    margin-top: -{{ section.settings.info_cards_margin_top }}px;
    background-color: {{ section.settings.info_cards_background_color }};
    position: relative;
    z-index: 1;

}
.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item{
    width: 33.33%;
    display: flex;
    justify-content: center;
    gap: 17px;
}
.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item:nth-child(1){
    border: 0;
    border-right: 1px solid #00000033;
    padding-right: 32px;
}
.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item:nth-child(2){
    border: 0;
    border-right: 1px solid #00000033;
    padding-right: 32px;
    padding-left: 32px;
}
.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item:nth-child(3){
    padding-left: 32px;
}
.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item .icon-image{
    width: 36px;
    height: 36px;
}
.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item .icon-image img{
    width: 100%;
}
.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item .info-text{
    width: calc(100% - 36px);
    display: flex;
    flex-direction: column;
    gap: 8px;
}
.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item .info-text .info-title{
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    font-size: {{ section.settings.info_title_font_size }}px;
    line-height: 120%;
    color: {{ section.settings.info_title_color }};
    margin: 0;
}
.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item .info-text .info-desc{
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    font-size: {{ section.settings.info_description_font_size }}px;
    line-height: 140%;
    color: {{ section.settings.info_description_color }};
    margin: 0;
}

/* Hover effects for info cards */
.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item {
    transition: all 0.3s ease;
    cursor: pointer;
    padding: 8px;
    margin: -8px;
}


.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item .icon-image {
    transition: transform 0.3s ease;
}

.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item:hover .icon-image {
    transform: scale(1.1);
}

.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item .info-title {
    transition: color 0.3s ease;
}

.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item:hover .info-title {
    color: #1a1a1a;
}

.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item .info-desc {
    transition: color 0.3s ease;
}

.rh-homepage-hero-section .container_rh .rh-hero-info-content .rh-hero-info-content-item:hover .info-desc {
    color: #272727;
}

