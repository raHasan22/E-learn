{% style %}
    .srs-single-hero {
    background: linear-gradient(50deg, #0C3225 0%, #05CE78 100%);
    padding: 80px 20px 118px 20px;
}

.srs-container {
    max-width: 1300px;
    margin: 0 auto;
    width: 100%;
}

.srs-content {
    max-width: 856px;
    width: 100%;
}

.srs-single-hero .breadcrumb-container {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 24px;
    flex-wrap: wrap;
}

.srs-single-hero .breadcrumb-container svg {
    flex-shrink: 0;
}

.srs-single-hero .breadcrumb-item {
    color: white;
    font-size: 14px;
    font-family: "Inter", sans-serif;
    font-weight: 400;
    line-height: 20px;
    display: flex;
    align-items: center;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .breadcrumb-item a {
    color: white;
    text-decoration: none;
    transition: opacity 0.3s ease;
}

.srs-single-hero .breadcrumb-item a:hover {
    opacity: 0.8;
}

.srs-single-hero .breadcrumb-item.active {
    font-weight: 700;
}

.srs-single-hero .content-section {
    display: flex;
    flex-direction: column;
    gap: 24px;
}

.srs-single-hero .main-title {
    color: white;
    font-size: 32px;
    font-family: 'Inter Variable', sans-serif;
    font-weight: 600;
    line-height: 1.2;
    margin: 0;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .description {
    color: white;
    font-size: 20px;
    font-family: "Inter", sans-serif;
    font-weight: 400;
    line-height: 1.5;
    margin: 0;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .author-info {
    color: white;
    font-size: 20px;
    font-family: "Inter", sans-serif;
    font-weight: 400;
    line-height: 1.5;
    margin: 0;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .rating-container {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .rating-score {
    color: white;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 700;
    line-height: 24px;
    display: inline-block;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .stars-container {
    display: flex;
    gap: 4px;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .star {
    width: 16px;
    height: 16px;
    background: #05CE78;
    clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
    display: inline !important;
}

.srs-single-hero .star.empty {
    background: rgba(255, 255, 255, 0.3);
}

.srs-single-hero .rating-text {
    color: white;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 600;
    line-height: 24px;
    display: inline-block;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .students-count {
    color: white;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    display: inline-block;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .meta-info {    
    display: flex;
    gap: 40px;
    flex-wrap: wrap;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    min-width: 200px;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .meta-icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    min-height: 1px; /* Ensure empty divs show */
}

.srs-single-hero .meta-icon svg {
    width: 100%;
    height: 100%;
}

.srs-single-hero .meta-text {
    color: white;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    display: inline-block;
    min-height: 1px; /* Ensure empty divs show */
}

/* Accordion Styles */
.srs-single-hero .accordion {
    margin-top: 40px;
}

.srs-single-hero .accordion-item {
    border: 1px solid rgba(255, 255, 255, 0.2);
    margin-bottom: 10px;
    border-radius: 8px;
    overflow: hidden;
}

.srs-single-hero .accordion-header {
    background: rgba(255, 255, 255, 0.1);
    padding: 20px;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background-color 0.3s ease;
}

.srs-single-hero .accordion-header:hover {
    background: rgba(255, 255, 255, 0.2);
}

.srs-single-hero .accordion-title {
    color: white;
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    font-weight: 600;
    margin: 0;
}

.srs-single-hero .accordion-icon {
    color: white;
    font-size: 16px;
    font-family: 'Inter', sans-serif;
    transition: transform 0.3s ease;
}

.srs-single-hero .accordion-content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
    background: rgba(255, 255, 255, 0.05);
}

.srs-single-hero .accordion-content.active {
    max-height: 500px;
}

.srs-single-hero .accordion-body {
    padding: 20px;
    color: white;
    line-height: 1.6;
}

.srs-single-hero .accordion-icon.active {
    transform: rotate(180deg);
}

/* Tablet Styles */
@media (max-width: 1024px) {
    .srs-single-hero {
        padding: 60px 20px 80px 20px;
    }
    
    .srs-single-hero .main-title {
        font-size: 28px;
        line-height: 1.3;
    }
    
    .srs-single-hero .description, .srs-single-hero .author-info {
        font-size: 18px;
    }
    
    .srs-single-hero .meta-info {
        gap: 30px;
    }
    
    .srs-single-hero .meta-item {
        min-width: 180px;
    }
    
    .srs-single-hero .breadcrumb-container svg {
        width: 7px;
        height: 7px;
    }
}

/* Mobile Styles */
@media (max-width: 768px) {
    .srs-single-hero  {
        padding: 40px 15px 60px 15px;
    }
    
    .srs-content {
        max-width: 100%;
    }
    
    .srs-single-hero .main-title {
        font-size: 24px;
        line-height: 1.4;
    }
    
    .srs-single-hero .description, .srs-single-hero .author-info {
        font-size: 16px;
        line-height: 1.5;
    }
    
    .srs-single-hero .content-section {
        gap: 20px;
    }
    
    .srs-single-hero .breadcrumb-container {
        flex-direction: row;
        flex-wrap: wrap;
        gap: 12px;
        margin-bottom: 20px;
    }
    
    .srs-single-hero .breadcrumb-item {
        font-size: 13px;
    }
    
    .srs-single-hero .rating-container {
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
    }
    
    .srs-single-hero .rating-container > div {
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .srs-single-hero .meta-info {
        flex-direction: column;
        gap: 16px;
    }
    
    .srs-single-hero .meta-item {
        min-width: auto;
        width: 100%;
    }
    
    .srs-single-hero .meta-text {
        font-size: 14px;
    }
    
    .srs-single-hero .breadcrumb-container svg {
        width: 6px;
        height: 6px;
    }
    
    .srs-single-hero .meta-icon {
        width: 20px;
        height: 20px;
    }
}

/* Small Mobile Styles */
@media (max-width: 480px) {
    .srs-single-hero {
        padding: 30px 12px 50px 12px;
    }
    
    .srs-single-hero .main-title {
        font-size: 20px;
        line-height: 1.3;
    }
    
    .srs-single-hero .description, .srs-single-hero .author-info {
        font-size: 14px;
        line-height: 1.4;
    }
    
    .srs-single-hero .breadcrumb-container {
        gap: 8px;
    }
    
    .srs-single-hero .breadcrumb-item {
        font-size: 12px;
    }
    
    .srs-single-hero .rating-score, .srs-single-hero .rating-text, .srs-single-hero .students-count {
        font-size: 14px;
    }
    
    .srs-single-hero .meta-text {
        font-size: 13px;
    }
    
    .srs-single-hero .star {
        width: 14px;
        height: 14px;
    }
    
    .srs-single-hero .breadcrumb-container svg {
        width: 5px;
        height: 5px;
    }
    
    .srs-single-hero .meta-icon {
        width: 18px;
        height: 18px;
    }
}
{% endstyle %}

{% if product %}
<div class="srs-single-hero">
    <div class="srs-container">
        <div class="srs-content">
            <div class="breadcrumb-container">
                <div class="breadcrumb-item">
                    <a href="{{ routes.root_url }}">Home</a>
                </div>
                <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M2.21506 0L1.79785 0.41583L5.37036 4L1.79785 7.58417L2.21506 8L6.20204 4L2.21506 0Z" fill="white"/>
                </svg>
                
                {% if product.collections.first %}
                <div class="breadcrumb-item">
                    <a href="{{ product.collections.first.url }}">{{ product.collections.first.title }}</a>
                </div>
                <svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M2.21506 0L1.79785 0.41583L5.37036 4L1.79785 7.58417L2.21506 8L6.20204 4L2.21506 0Z" fill="white"/>
                </svg>
                {% endif %}
                
                <div class="breadcrumb-item active">{{ product.title }}</div>
            </div>
            
            <div class="content-section">
                <h1 class="main-title">{{ product.title }}</h1>
                <p class="description">
                    {% if product.description != blank %}
                        {{ product.description | strip_html | truncate: 200 }}
                    {% endif %}
                </p>
                <p class="author-info">Created by: {{ product.vendor }}</p>
                
                <div class="rating-container">
                    {% assign rating = product.metafields.custom.rating | default: 5 %}
                    {% assign rating_count = product.metafields.custom.rating_count | default: 100 %}
                    {% assign student_count = product.metafields.custom.student_count | default: 1000 %}
                    
