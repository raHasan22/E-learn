{% style %}
.rh-header-section {
    background: #fff;
    padding: 20px 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    border-bottom: 1px solid #e5e7eb;
  }

  .rh-header-section .container_rh {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .rh-header-section .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 40px;
  }

  .rh-header-section .header-left {
    display: flex;
    align-items: center;
    gap: 40px;
  }

  .rh-header-section .header-logo {
    display: flex;
    align-items: center;
  }

  .rh-header-section .header-logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .rh-header-section .logo-text {
    color: #05ce78;
    font-family: "Helvetica Neue", sans-serif;
    font-size: 24px;
    font-weight: 700;
    line-height: 1;
  }

  .rh-header-section .logo-image {
    max-height: 50px;
    width: auto;
    display: block;
  }

  .rh-header-section .header-nav {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .rh-header-section .nav-link {
    color: #231e15;
    font-family: "Helvetica Neue", sans-serif;
    font-size: 16px;
    font-weight: 500;
    line-height: 24px;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .rh-header-section .nav-link:hover {
    color: #05ce78;
  }

  .rh-header-section .header-right {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .rh-header-section .header-search {
    display: flex;
    align-items: center;
    background: white;
    border-radius: 6px;
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.8);
    /* min-width: 300px; */
  }

  .rh-header-section .search-input {
    flex: 1;
    border: none;
    outline: none;
    padding: 10px 16px;
    font-family: "Helvetica Neue", sans-serif;
    font-size: 14px;
    font-weight: 400;
    line-height: 22px;
    color: #231e15;
    background: transparent;
  }

  .rh-header-section .search-input::placeholder {
    color: #5a6078;
  }

  .rh-header-section .search-button {
    background: transparent;
    border: none;
    padding: 10px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .rh-header-section .search-button:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }

  .rh-header-section .header-buttons {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .rh-header-section .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px 20px;
    border-radius: 6px;
    font-family: "Helvetica Neue", sans-serif;
    font-size: 14px;
    font-weight: 500;
    line-height: 1.4;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid transparent;
    white-space: nowrap;
  }

  .rh-header-section .btn-primary {
    background: #05ce78;
    color: white;
  }

  .rh-header-section .btn-primary:hover {
    background: #04b868;
    transform: translateY(-1px);
  }

  .rh-header-section .btn-outline {
    background: transparent;
    color: #231e15;
    border-color: #231e15;
  }

  .rh-header-section .btn-outline:hover {
    background: #231e15;
    color: white;
  }

  /* Mobile Menu Toggle */
  .rh-header-section .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    color: #231e15;
    font-size: 24px;
    cursor: pointer;
    padding: 8px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .rh-header-section .mobile-menu-toggle:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }

  .rh-header-section .mobile-menu-toggle:focus {
    outline: 2px solid #05ce78;
    outline-offset: 2px;
  }

  /* Responsive Styles for Header */

  /* Desktop (1440px+) */
  @media screen and (min-width: 1440px) {
    .rh-header-section .container_rh {
      max-width: 1440px;
      padding: 0 40px;
    }

    .rh-header-section .header-content {
      gap: 50px;
    }

    .rh-header-section .header-left {
      gap: 50px;
    }

    .rh-header-section .logo-text {
      font-size: 28px;
    }

    .rh-header-section .nav-link {
      font-size: 18px;
    }

    .rh-header-section .header-search {
      /* min-width: 400px; */
    }

    .rh-header-section .search-input {
      font-size: 16px;
      padding: 12px 20px;
    }

    .rh-header-section .btn {
      padding: 12px 24px;
      font-size: 16px;
      /* min-height: 48px; */
    }
  }

  /* Laptop (1024px - 1439px) */
  @media screen and (min-width: 1024px) and (max-width: 1439px) {
    .rh-header-section .container_rh {
      max-width: 100%;
      padding: 0 clamp(20px, 3vw, 30px);
    }

    .rh-header-section .header-content {
      gap: 10px;
    }

    .rh-header-section .header-left {
      gap: clamp(30px, 4vw, 15px);
    }

    .rh-header-section .logo-text {
