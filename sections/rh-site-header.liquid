      /* min-width: clamp(250px, 25vw, 350px); */
    }
    .rh-header-section .header-right {
      gap: 10px;
    }
    .rh-header-section .header-buttons {
      gap: 5px;
    }
    .rh-header-section .btn {
      padding: clamp(8px, 1vw, 10px) clamp(16px, 2vw, 20px);
      font-size: clamp(13px, 1.3vw, 15px);
      /* min-height: clamp(36px, 4vw, 42px); */
    }
  }

  /* Medium Tablet (600px - 767px) */
  @media screen and (min-width: 600px) and (max-width: 1024px) {
    .rh-header-section .container_rh {
      padding: 0 18px;
    }

