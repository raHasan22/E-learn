    }

    .rh-header-section .btn {
      flex: 1;
      max-width: 80px;
      padding: 3px 4px;
      font-size: 8px;
    }
  }

  /* Mobile Navigation Menu */
  .rh-header-section .mobile-nav {
    display: none;
    position: fixed;
    top: 100%;
    left: 0;
    right: 0;
    background: #fff;
    padding: 20px;
    border-top: 1px solid #e5e7eb;
    z-index: 999;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transform: translateY(-100%);
    transition: transform 0.3s ease;
  }

  .rh-header-section .mobile-nav.active {
    display: block;
    /* transform: translateY(0); */
  }

  .rh-header-section .mobile-nav .nav-link {
    display: block;
    padding: 12px 0;
    border-bottom: 1px solid #e5e7eb;
    color: #231e15;
    font-size: 16px;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .rh-header-section .mobile-nav .nav-link:hover {
    color: #05ce78;
  }

  .rh-header-section .mobile-nav .nav-link:last-child {
    border-bottom: none;
  }

  .rh-header-section .mobile-search {
    display: none;
    margin-top: 15px;
  }

  @media screen and (max-width: 768px) {
    .rh-header-section .mobile-search {
      display: block;
    }

    .rh-header-section .mobile-search .header-search {
      display: flex;
      width: 100%;
      min-width: auto;
    }
  }

  /* Focus styles for accessibility */
  .rh-header-section .nav-link:focus,
  .rh-header-section .btn:focus {
    outline: 2px solid #05ce78;
    outline-offset: 2px;
  }

  /* Overlay for mobile menu */
  .rh-header-section .mobile-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 998;
  }

  .rh-header-section .mobile-overlay.active {
    display: block;
  }
