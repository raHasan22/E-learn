/* Course Card Styles */
.rh-course-card {
    background: {{ section.settings.card_background_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    outline: 1px {{ section.settings.card_border_color }} solid;
    outline-offset: -1px;
    padding: {{ section.settings.card_padding }}px;
    width: calc(25% - {{ section.settings.cards_gap }}px * 0.75);
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    display: block;
}

.rh-course-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    outline: 2px {{ section.settings.card_hover_border_color }} solid;
}

.rh-course-card-image-container {
    margin-bottom: {{ section.settings.image_margin_bottom }}px;
}

.rh-course-card-image-wrapper {
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
    position: relative;
}

.rh-course-card-image {
    width: 100%;
    height: {{ section.settings.image_height }}px;
    overflow: hidden;
    border-bottom: {{ section.settings.image_bottom_border }}px {{ section.settings.image_bottom_border_color }} solid;
}
.rh-course-card-image img{
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.rh-course-card-content {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_gap }}px;
}

.rh-course-card-text-content {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.text_content_gap }}px;
}

.rh-course-card-title {
    color: {{ section.settings.card_title_color }};
    font-size: {{ section.settings.card_title_font_size }}px;
    font-family: "Inter", sans-serif;
    font-weight: 700;
    line-height: 120%;
    margin: 0;
    text-align: left;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0;
}

.rh-course-card-description {
    color: {{ section.settings.card_description_color }};
    font-size: {{ section.settings.card_description_font_size }}px;
    font-family: "Inter", sans-serif;
    font-weight: 400;
    line-height: 160%;
    margin: 0;
    text-align: left;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    margin: 0;
}

.rh-course-card-duration {
    display: flex;
    align-items: center;
    gap: {{ section.settings.duration_icon_gap }}px;
}

.rh-course-card-duration-icon {
    width: {{ section.settings.duration_icon_size }}px;
    height: {{ section.settings.duration_icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.rh-course-card-duration-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.rh-course-card-duration-text {
    color: {{ section.settings.duration_text_color }};
    font-size: {{ section.settings.duration_text_font_size }}px;
    font-family: "Inter", sans-serif;
    font-weight: 500;
    line-height: 115%;
    text-align: left;
}

