                </div>
                <div class="rh-course-card-duration">
                  <div class="rh-course-card-duration-icon">
                    <img src="{{ 'clock.png' | asset_url }}" alt="Duration icon" />
                  </div>
                  <div class="rh-course-card-duration-text">
                    {{ section.settings.default_duration }}
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
