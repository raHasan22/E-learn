<div class="rh-homepage-courses-section">
    <div class="container_rh">
      <div class="rh-courses-header">
        <h2 class="rh-header-title">{{ section.settings.section_title }}</h2>
        <p class="rh-header-desc">
          {{ section.settings.section_description }}
        </p>
      </div>
      <div class="rh-courses-cards">
        {% if section.settings.product_source == 'collection' and section.settings.collection != blank %}
          {% for product in section.settings.collection.products limit: section.settings.products_limit %}
            <a href="{{ product.url }}" class="rh-course-card">
              <div class="rh-course-card-image-container">
                <div class="rh-course-card-image-wrapper">
                  <div class="rh-course-card-image">
                    {% if product.featured_image %}
                      {{ product.featured_image | image_url: width: 284 | image_tag: alt: product.featured_image.alt, loading: 'lazy' }}
                    {% else %}
                      <img src="https://dummyimage.com/284x195/cccccc/ffffff&text=Course+Image" alt="Course placeholder" />
                    {% endif %}
                  </div>
                </div>
              </div>
              <div class="rh-course-card-content">
                <div class="rh-course-card-text-content">
                  <h3 class="rh-course-card-title">
                    {{ product.title }}
                  </h3>
                  <p class="rh-course-card-description">
                    {% if product.description != blank %}
                      {{ product.description | strip_html | truncate: 120 }}
                    {% else %}
                      {{ section.settings.default_description }}
                    {% endif %}
                  </p>
                </div>
                <div class="rh-course-card-duration">
                  <div class="rh-course-card-duration-icon">
                    {% if section.settings.duration_icon %}
                      {{ section.settings.duration_icon | image_url: width: 16 | image_tag: alt: section.settings.duration_icon.alt, loading: 'lazy' }}
                    {% else %}
                      <img src="{{ 'clock.png' | asset_url }}" alt="Duration icon" />
                    {% endif %}
                  </div>
                  <div class="rh-course-card-duration-text">
                    {% if product.metafields.custom.duration and product.metafields.custom.duration != blank and product.metafields.custom.duration != '{}' %}
                      {{ product.metafields.custom.duration }}
                    {% elsif product.metafields.course.duration and product.metafields.course.duration != blank and product.metafields.course.duration != '{}' %}
                      {{ product.metafields.course.duration }}
                    {% elsif product.metafields.duration and product.metafields.duration != blank and product.metafields.duration != '{}' %}
                      {{ product.metafields.duration }}
                    {% else %}
                      {{ section.settings.default_duration }}
                    {% endif %}
                  </div>
                </div>
              </div>
            </a>
          {% endfor %}
        {% elsif section.settings.product_source == 'specific' and section.settings.specific_products != blank %}
          {% for product in section.settings.specific_products limit: section.settings.products_limit %}
            {% if product != blank %}
              <a href="{{ product.url }}" class="rh-course-card">
                <div class="rh-course-card-image-container">
                  <div class="rh-course-card-image-wrapper">
                    <div class="rh-course-card-image">
                      {% if product.featured_image %}
                        {{ product.featured_image | image_url: width: 284 | image_tag: alt: product.featured_image.alt, loading: 'lazy' }}
                      {% else %}
                        <img src="https://dummyimage.com/284x195/cccccc/ffffff&text=Course+Image" alt="Course placeholder" />
                      {% endif %}
                    </div>
                  </div>
                </div>
                <div class="rh-course-card-content">
                  <div class="rh-course-card-text-content">
                    <h3 class="rh-course-card-title">
                      {{ product.title }}
                    </h3>
                    <p class="rh-course-card-description">
                      {% if product.description != blank %}
                        {{ product.description | strip_html | truncate: 120 }}
                      {% else %}
                        {{ section.settings.default_description }}
                      {% endif %}
                    </p>
                  </div>
                  <div class="rh-course-card-duration">
                    <div class="rh-course-card-duration-icon">
                      {% if section.settings.duration_icon %}
                        {{ section.settings.duration_icon | image_url: width: 16 | image_tag: alt: section.settings.duration_icon.alt, loading: 'lazy' }}
                      {% else %}
                        <img src="{{ 'clock.png' | asset_url }}" alt="Duration icon" />
                      {% endif %}
                    </div>
                    <div class="rh-course-card-duration-text">
                      {% if product.metafields.custom.duration and product.metafields.custom.duration != blank and product.metafields.custom.duration != '{}' %}
                        {{ product.metafields.custom.duration }}
                      {% elsif product.metafields.course.duration and product.metafields.course.duration != blank and product.metafields.course.duration != '{}' %}
                        {{ product.metafields.course.duration }}
                      {% elsif product.metafields.duration and product.metafields.duration != blank and product.metafields.duration != '{}' %}
                        {{ product.metafields.duration }}
                      {% else %}
                        {{ section.settings.default_duration }}
                      {% endif %}
                    </div>
                  </div>
                </div>
              </a>
            {% endif %}
          {% endfor %}
        {% else %}
          <!-- Fallback content when no products are selected -->
          {% for i in (1..8) %}
            <div class="rh-course-card">
              <div class="rh-course-card-image-container">
                <div class="rh-course-card-image-wrapper">
                  <div class="rh-course-card-image">
                    <img src="https://dummyimage.com/284x195/cccccc/ffffff&text=Course+{{ i }}" alt="Course placeholder" />
                  </div>
                </div>
              </div>
              <div class="rh-course-card-content">
                <div class="rh-course-card-text-content">
