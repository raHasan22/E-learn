{% style %}
    .rh-meet-our-team-section {
  background-color: {{ section.settings.background_color }};
  padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
}
.rh-meet-our-team-section .container_rh {
  max-width: 1300px;
  margin: 0 auto;
}
.rh-meet-our-team-section .rh-meet-our-team-header {
  margin: 0 0 48px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16px;
}
.rh-meet-our-team-section .rh-meet-our-team-header .rh-header-title {
  color: {{ section.settings.header_title_color }};
  font-size: 50px;
  font-family: "Inter", sans-serif;
  font-weight: 700;
  line-height: 120%;
  margin: 0;
}
.rh-meet-our-team-section .rh-meet-our-team-header .rh-header-desc {
  color: {{ section.settings.header_description_color }};
  font-size: 20px;
  font-family: "Inter", sans-serif;
  font-weight: 400;
  line-height: 140%;
  margin: 0;
}

/* Instructor cards container */
.rh-meet-our-team-cards {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 40px;
  flex-wrap: wrap;
  margin-top: 60px;
}

/* Individual instructor card */
.rh-instructor-card {
  display: flex;
  align-items: center;
  max-width: 630px;
  width: 100%;
  min-height: 200px;
  background: {{ section.settings.card_background_color }};
  border-radius: {{ section.settings.card_border_radius }}px;
  overflow: hidden;
  transition: all 0.3s ease;
  padding: 30px;
  gap: 30px;
}

.rh-instructor-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 30px {{ section.settings.card_hover_shadow_color }};
}

/* Instructor info section (left side) */
.rh-instructor-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 23px;
  min-width: 0;
}

.rh-instructor-text {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.rh-instructor-name {
  color: {{ section.settings.instructor_name_color }};
  font-size: 24px;
  font-family: "Inter", sans-serif;
  font-weight: 600;
  line-height: 31.20px;
  word-wrap: break-word;
  margin: 0;
}

.rh-instructor-title {
  color: {{ section.settings.instructor_title_color }};
  font-size: 16px;
  font-family: "Inter", sans-serif;
  font-weight: 400;
  line-height: 25.60px;
  word-wrap: break-word;
  margin: 0;
}

/* Social media icons */
.rh-instructor-social {
  display: flex;
  align-items: center;
  gap: 14px;
}

.rh-social-icon {
  width: 24px;
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-decoration: none;
  transition: all 0.3s ease;
  border-radius: 4px;
  padding: 2px;
}

.rh-social-icon:hover {
  transform: translateY(-2px);
  background: {{ section.settings.social_icon_hover_background_color }};
}

.rh-social-icon img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border-radius: 2px;
}

/* Instructor image section (right side) */
.rh-instructor-image {
  flex-shrink: 0;
  width: 200px;
  height: 150px;
  background: {{ section.settings.image_background_color }};
  border-radius: {{ section.settings.image_border_radius }}px;
  overflow: hidden;
}

.rh-instructor-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: {{ section.settings.image_border_radius }}px;
}

/* Responsive styles for instructor cards */
@media screen and (max-width: 1023px) {
  .rh-meet-our-team-section {
    padding: {{ section.settings.padding_top | times: 0.8 | round }}px 20px {{ section.settings.padding_bottom | times: 0.8 | round }}px;
  }
  
  .rh-meet-our-team-section .rh-meet-our-team-header .rh-header-title {
    font-size: 42px;
  }
  
  .rh-meet-our-team-section .rh-meet-our-team-header .rh-header-desc {
    font-size: 18px;
  }
  
  .rh-meet-our-team-cards {
    gap: 30px;
    margin-top: 50px;
  }
  
  .rh-instructor-card {
    max-width: 550px;
    padding: 25px;
    gap: 25px;
  }
  
  .rh-instructor-image {
    width: 180px;
    height: 130px;
  }
}

@media screen and (max-width: 768px) {
  .rh-meet-our-team-section {
    padding: {{ section.settings.padding_top | times: 0.6 | round }}px 20px {{ section.settings.padding_bottom | times: 0.6 | round }}px;
  }
  
  .rh-meet-our-team-section .rh-meet-our-team-header .rh-header-title {
    font-size: 36px;
  }
  
  .rh-meet-our-team-section .rh-meet-our-team-header .rh-header-desc {
    font-size: 16px;
  }
  
  .rh-meet-our-team-cards {
    gap: 24px;
    margin-top: 40px;
  }
  
  .rh-instructor-card {
    max-width: 500px;
    padding: 20px;
    gap: 20px;
    flex-direction: column;
    text-align: center;
  }
  .rh-instructor-social{
    justify-content: center;
  }
  
  .rh-instructor-info {
    gap: 16px;
  }
  
  .rh-instructor-image {
    width: 160px;
    height: 120px;
    order: -1;
  }
  
  .rh-instructor-name {
    font-size: 20px;
    line-height: 26px;
  }
  
  .rh-instructor-title {
    font-size: 14px;
    line-height: 22px;
  }
}

@media screen and (max-width: 480px) {
  .rh-meet-our-team-section {
    padding: {{ section.settings.padding_top | times: 0.4 | round }}px 16px {{ section.settings.padding_bottom | times: 0.4 | round }}px;
  }
  
  .rh-meet-our-team-section .rh-meet-our-team-header .rh-header-title {
    font-size: 28px;
  }
  
  .rh-meet-our-team-section .rh-meet-our-team-header .rh-header-desc {
    font-size: 14px;
  }
  
  .rh-meet-our-team-cards {
    gap: 20px;
    margin-top: 30px;
  }
  
  .rh-instructor-card {
    padding: 16px;
    gap: 16px;
  }
  
  .rh-instructor-info {
    gap: 12px;
  }
  
  .rh-instructor-image {
    width: 140px;
    height: 100px;
  }
  
  .rh-instructor-name {
    font-size: 18px;
    line-height: 24px;
  }
  
  .rh-instructor-title {
    font-size: 13px;
    line-height: 20px;
  }
  
  .rh-social-icon {
    width: 20px;
    height: 20px;
  }
  
  .rh-social-icon-inner {
    width: 18px;
    height: 18px;
  }
}

@media screen and (max-width: 375px) {
  .rh-meet-our-team-section .rh-meet-our-team-header .rh-header-title {
    font-size: 24px;
  }
  
  .rh-instructor-card {
    padding: 12px;
    gap: 12px;
  }
  
  .rh-instructor-info {
    gap: 10px;
  }
  
  .rh-instructor-image {
    width: 120px;
    height: 90px;
  }
  
  .rh-instructor-name {
    font-size: 16px;
    line-height: 22px;
  }
  
  .rh-instructor-title {
    font-size: 12px;
    line-height: 18px;
  }
  
  .rh-social-icon {
    width: 18px;
    height: 18px;
  }
  
  .rh-social-icon-inner {
    width: 16px;
    height: 16px;
  }
}
{% endstyle %}

<div class="rh-meet-our-team-section">
      <div class="container_rh">
        <div class="rh-meet-our-team-header">
          <h2 class="rh-header-title">{{ section.settings.header_title | default: 'Meet your instructors' }}</h2>
          <p class="rh-header-desc">{{ section.settings.header_description | default: 'All our courses are taught by us - Max & Manuel. Because we love what we do.' }}</p>
        </div>
        <div class="rh-meet-our-team-cards">
          {% for block in section.blocks %}
            {% if block.type == 'instructor' %}
              <div class="rh-instructor-card" {{ block.shopify_attributes }}>
                <div class="rh-instructor-info">
                  <div class="rh-instructor-text">
                    <h3 class="rh-instructor-name">{{ block.settings.name | default: 'Instructor Name' }}</h3>
                    <p class="rh-instructor-title">{{ block.settings.title | default: 'Instructor Title' }}</p>
                  </div>
                  <div class="rh-instructor-social">
                    {% if block.settings.linkedin_url != blank %}
                      <a href="{{ block.settings.linkedin_url }}" class="rh-social-icon" target="_blank" rel="noopener">
                        {% assign linkedin_asset = 'linkedin.png' | asset_url %}
                        {% if linkedin_asset contains 'no-image' %}
                          <img src="https://dummyimage.com/24x24/0077b5/ffffff&text=LI" alt="LinkedIn" />
                        {% else %}
                          <img src="{{ linkedin_asset }}" alt="LinkedIn" />
                        {% endif %}
                      </a>
                    {% endif %}
                    {% if block.settings.twitter_url != blank %}
                      <a href="{{ block.settings.twitter_url }}" class="rh-social-icon" target="_blank" rel="noopener">
                        {% assign twitter_asset = 'X.png' | asset_url %}
                        {% if twitter_asset contains 'no-image' %}
                          <img src="https://dummyimage.com/24x24/1da1f2/ffffff&text=TW" alt="X (Twitter)" />
                        {% else %}
                          <img src="{{ twitter_asset }}" alt="X (Twitter)" />
                        {% endif %}
                      </a>
                    {% endif %}
                    {% if block.settings.facebook_url != blank %}
                      <a href="{{ block.settings.facebook_url }}" class="rh-social-icon" target="_blank" rel="noopener">
                        {% assign facebook_asset = 'facebook.png' | asset_url %}
                        {% if facebook_asset contains 'no-image' %}
                          <img src="https://dummyimage.com/24x24/1877f2/ffffff&text=FB" alt="Facebook" />
                        {% else %}
                          <img src="{{ facebook_asset }}" alt="Facebook" />
                        {% endif %}
                      </a>
                    {% endif %}
                  </div>
                </div>
                <div class="rh-instructor-image">
                  {% if block.settings.image %}
                    <img src="{{ block.settings.image | image_url: width: 301, height: 183 }}" alt="{{ block.settings.name }}" />
                  {% else %}
                    <img src="https://dummyimage.com/301x183/cccccc/666666&text=Instructor+Image" alt="{{ block.settings.name }}" />
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>

