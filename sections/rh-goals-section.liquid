        height: calc({{ section.settings.card_height }}px * 0.89);
    }
    
    .rh-company-goals-section .goal-card .card-icon {
        width: calc({{ section.settings.icon_size }}px * 0.875);
        height: calc({{ section.settings.icon_size }}px * 0.875);
