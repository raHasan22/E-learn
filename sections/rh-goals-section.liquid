{% style %}
    .rh-company-goals-section{
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_horizontal }}px {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
}
.rh-company-goals-section .container_rh{
    max-width: 1300px;
    margin: 0 auto;
}

/* Goals Header */
.rh-company-goals-section .rh-goals-header {
    text-align: center;
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
}

.rh-company-goals-section .goals-title {
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    font-size: {{ section.settings.title_font_size }}px;
    line-height: 120%;
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.title_margin_bottom }}px;
}

.rh-company-goals-section .goals-categories {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.categories_gap }}px;
    flex-wrap: wrap;
}

.rh-company-goals-section .category-item {
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    font-size: {{ section.settings.category_font_size }}px;
    line-height: 140%;
    color: {{ section.settings.category_color }};
    cursor: pointer;
    transition: color 0.3s ease;
}

.rh-company-goals-section .category-item:hover {
    color: {{ section.settings.category_hover_color }};
}

.rh-company-goals-section .category-separator {
    font-family: 'Inter', sans-serif;
    font-weight: 400;
    font-size: {{ section.settings.separator_font_size }}px;
    color: {{ section.settings.separator_color }};
    opacity: 0.6;
}

/* Goals Cards */
.rh-company-goals-section .rh-goals-cards {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.cards_gap }}px;
    flex-wrap: wrap;
}

.rh-company-goals-section .goal-card {
    width: {{ section.settings.card_width }}px;
    height: {{ section.settings.card_height }}px;
    background: {{ section.settings.card_background_color }};
    border-radius: {{ section.settings.card_border_radius }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    border: 1px solid transparent;
}

.rh-company-goals-section .goal-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    background: {{ section.settings.card_hover_background_color }};
    border: 1px solid {{ section.settings.card_hover_border_color }};
}

.rh-company-goals-section .goal-card .card-icon {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: {{ section.settings.icon_margin_bottom }}px;
}

.rh-company-goals-section .goal-card .card-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.rh-company-goals-section .goal-card .card-text {
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    font-size: {{ section.settings.card_text_font_size }}px;
    line-height: 140%;
    color: {{ section.settings.card_text_color }};
    text-align: center;
}

/* Company Goals Section Responsive */
@media screen and (max-width: 1366px) {
    .rh-company-goals-section {
