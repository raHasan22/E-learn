{% endstyle %}

<div class="rh-company-goals-section">
    <div class="container_rh">
      <div class="rh-goals-header">
        <h2 class="goals-title">{{ section.settings.section_title }}</h2>
        <div class="goals-categories">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'category' %}
                <span class="category-item">{{ block.settings.category_name }}</span>
                {% unless forloop.last %}
                  <span class="category-separator">|</span>
                {% endunless %}
            {% endcase %}
          {% endfor %}
        </div>
      </div>
      <div class="rh-goals-cards">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'goal_card' %}
              <div class="goal-card" {{ block.shopify_attributes }}>
                <div class="card-icon">
                  {% if block.settings.card_image %}
                    {{ block.settings.card_image | image_url: width: 80 | image_tag: alt: block.settings.card_image.alt, loading: 'lazy' }}
                  {% else %}
                    <img src="https://dummyimage.com/80x80/cccccc/ffffff&text=Card" alt="Card placeholder" />
                  {% endif %}
                </div>
                {% if block.settings.card_text %}
                  <div class="card-text">{{ block.settings.card_text }}</div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>

